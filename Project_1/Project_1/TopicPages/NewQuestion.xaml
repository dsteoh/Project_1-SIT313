<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_1.TopicPages.NewQuestion"
             BackgroundColor="#2f3030">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout
                    Orientation="Vertical"
                    Spacing="20"
                    Padding="50">
                <BoxView HeightRequest="20"/>
                    <StackLayout 
                        Orientation="Vertical"
                        Spacing="10">
                    <Entry  x:Name="title" Placeholder="Title" PlaceholderColor="White" TextColor="White"/>
                    <Entry  x:Name="description" Placeholder="Description" PlaceholderColor="White" TextColor="White"></Entry>
                    <Label Text="Post" TextColor="White"/>
                    <Editor x:Name="questionEdit" HorizontalOptions="FillAndExpand" HeightRequest="300" TextColor="White"/>
                    <Button Text="Submit" Clicked="Button_Clicked"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>